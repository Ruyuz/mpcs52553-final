<% singer = Singer.find_by(id: params["id"]) %>

<h1><%= singer.name %></h1>

<p>Concerts by this singer:</p>

<div class="row">
  <% singer.concerts.each do |concert| %>
    <div class="col-sm-3">
      <%= link_to image_tag(concert.poster_url, class: 'img-fluid'), "/concerts/#{concert.id}" %>
    </div>
  <% end %>
</div>
