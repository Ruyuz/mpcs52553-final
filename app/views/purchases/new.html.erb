<h1>Create a New Purchase</h1>

<div class="row">
  <div class="col-sm-4">

    <%= form_tag "/purchases" do %>

      <p>Concert ID: <input name="concert_id" type="text" autofocus class="form-control"></p>
      <p>User ID: <input name="user_id" type="text" autofocus class="form-control"></p>

      <button class="btn btn-primary">Add New Purchase</button>

    <% end %>

  </div>
</div>
