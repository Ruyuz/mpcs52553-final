<% concert = Concert.find_by(id: params["id"]) %>

<div class="row">
  <div class="col-sm-6">
    <h1><%= concert.name %></h1>
    <% if concert.singer.present? %>
      <p class="lead">Concert By: <%= link_to concert.singer.name, "/singers/#{concert.singer.id}" %></p>
    <% end %>
  </div>
</div>
<div class="row">

  <div class="col-sm-6">
    <%= image_tag concert.poster_url, class: 'rounded img-fluid ' %>
  </div>
  <div class="col-sm-6">
    <% if concert.singer.present? %>
      <p>Concert by this singer:</p>

      <div class="row">
        <% concert.singer.concerts.each do |concert| %>
          <div class="col-sm-2">
            <%= link_to image_tag(concert.poster_url, class: 'img-fluid'), "/concerts/#{concert.id}" %>
          </div>
        <% end %>
      </div>

    <% end %>
  </div>
</div>
