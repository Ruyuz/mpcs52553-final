<h1>Add a Concert</h1>

<div class="row">
  <div class="col-sm-4">

    <%= form_tag "/concerts" do %>

      <p>Name: <input name="name" type="text" autofocus class="form-control"></p>
      <p>City: <input name="city" type="text" class="form-control"></p>
      <p>Date: <input name="date" type="text" class="form-control"></p>
      <p>Time: <input name="time" type="text" class="form-control"></p>
      <p>Address: <input name="address" type="text" class="form-control"></p>
      <p>Poster_url: <input name="poster_url" type="text" class="form-control"></p>

      <button class="btn btn-primary">Add Concert</button>

    <% end %>

  </div>
</div>
